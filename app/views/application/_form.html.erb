<div class="field">
  <%= form_tag("/format") do %>
    <%= label_tag 'content', '' %>
    <%= text_area_tag 'content', nil, rows: 10, cols: 40 %><br>
    <div class="row">
        <div class="col-xs-6">
            <div class="input-group">
                <span class="input-group-addon">
                    <%= radio_button_tag 'order', 'alpha', true %>
                    <%= label_tag 'order', "Alphabetize" %>
                </span>
            </div>
        </div> 
        <div class="col-xs-6">
            <div class="input-group">
                <span class="input-group-addon">   
                    <%= radio_button_tag 'order', 'random' %>
                    <%= label_tag 'order', "Randomize" %>
                </span>
            </div>
        </div>
        <div class="col-xs-12">
            <div class="input-group">
                <span class="input-group-addon">  
                <%= check_box_tag 'numbered' %> Numbered
                </span>
            </div>
        </div>
        <div class="col-xs-12 center">
                <button type="submit" class="btn btn-default" name="commit" value="format">FORMAT</button>
        </div>
    </div>
  <% end %>
</div>